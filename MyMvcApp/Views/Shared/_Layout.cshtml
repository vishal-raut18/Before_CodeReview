<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Dashboard</title>

    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/Ticket/logo.png" />


    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Open Sans from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>


    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/23.2.4/css/dx.light.css" />




    <link href="~/Content/site.css" rel="stylesheet" />

    <link href="~/Content/sliderbar.css" rel="stylesheet" />

    <link href="~/Content/gridstyle.css" rel="stylesheet" />

    <link href="~/Content/Ticket/newTIcketStyle.css" rel="stylesheet" />
    <link href="~/Content/Ticket/AssignOwner.css" rel="stylesheet" />


    <link href="~/Content/Ticket/AssignToModal.css" rel="stylesheet" />
    <link href="~/Content/Ticket/edit-ticket.css" rel="stylesheet" />


    <link href="~/Content/Ticket/FilterModel.css" rel="stylesheet" />
    <link href="~/Content/Ticket/ColumnChooser.css" rel="stylesheet" />

    <style>
        #selectionBadge {
            transition: opacity 0.2s ease-in-out;
        }

            #selectionBadge span {
                font-family: 'Open Sans', 'Segoe UI';
            }
    </style>

    <style>
        /* Target only the checkboxes in your editAssign grid */
        #editAssignToModelGrid .circle-checkbox-only-editAssign .dx-checkbox-icon {
            border-radius: 50% !important;
            border: 2px solid #6c757d !important;
            width: 16px;
            height: 16px;
        }

        #editAssignToModelGrid .circle-checkbox-only-editAssign .dx-checkbox-checked .dx-checkbox-icon {
            background-color: #0d6efd !important;
            border-color: #0d6efd !important;
        }

            #editAssignToModelGrid .circle-checkbox-only-editAssign .dx-checkbox-checked .dx-checkbox-icon::after {
                content: '';
                width: 8px;
                height: 8px;
                background: white;
                border-radius: 50%;
                display: block;
                margin: 3px auto;
            }

        /* Optional: Hide DevExtreme's default checkmark */
        #editAssignToModelGrid .circle-checkbox-only-editAssign .dx-checkbox-icon::before {
            display: none !important;
        }


        .preselected-green-checkbox .dx-checkbox-icon {
            border-radius: 50%;
            background-color: green !important;
            border: 2px solid green;
            width: 16px;
            height: 16px;
            position: relative;
        }

            .preselected-green-checkbox .dx-checkbox-icon::after {
                content: "";
                width: 6px;
                height: 6px;
                background: white;
                border-radius: 50%;
                position: absolute;
                top: 4px;
                left: 4px;
            }


        /* Target only the checkboxes in your editassignToOwnerGrid */
        #editassignToOwnerGrid .circle-checkbox-only-editOwner .dx-checkbox-icon {
            border-radius: 50% !important;
            border: 2px solid #6c757d !important;
            width: 16px;
            height: 16px;
        }

        #editassignToOwnerGrid .circle-checkbox-only-editOwner .dx-checkbox-checked .dx-checkbox-icon {
            background-color: #0d6efd !important;
            border-color: #0d6efd !important;
        }

            #editassignToOwnerGrid .circle-checkbox-only-editOwner .dx-checkbox-checked .dx-checkbox-icon::after {
                content: '';
                width: 8px;
                height: 8px;
                background: white;
                border-radius: 50%;
                display: block;
                margin: 3px auto;
            }

        /* Optional: Hide DevExtreme's default checkmark */
        #editassignToOwnerGrid .circle-checkbox-only-editOwner .dx-checkbox-icon::before {
            display: none !important;
        }
    </style>
    <style>
        .controls-bar .btn:focus,
        .controls-bar .btn:active,
        .controls-bar .btn.show,
        .controls-bar .dropdown-toggle:focus {
            outline: none !important;
            box-shadow: none !important;
        }
    </style>


</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="top-logo">
            <button class="btn-toggle" id="menu-toggle"><i class="bi bi-list"></i></button>
            <img id="imgLogo" src="~/Content/images/faronics-logo.png" alt="Logo" />
        </div>
        <a href="@Url.Action("Index", "Dashboard")"><i class="bi bi-grid"></i><span class="text">Dashboard</span></a>
        <a href="#"><i class="fas fa-th"></i><span class="text">Applications</span></a>
        <a href="#"><i class="bi bi-arrow-repeat"></i><span class="text">Windows Updates</span></a>
        <a href="#"><i class="bi bi-clipboard-data"></i><span class="text">Inventory</span></a>
        <a href="#"><i class="bi bi-download"></i><span class="text">OS Deployment</span></a>
        <a href="#"><i class="bi bi-phone"></i><span class="text">MDM</span></a>
        <a href="#"><i class="bi bi-shield-exclamation"></i><span class="text">Anti‑Virus</span></a>
        <a class="active" href="@Url.Action("Ticketing", "Ticket")"><i class="bi bi-ticket-detailed"></i><span class="text">Tickets</span></a>
        <a href="#"><i class="bi bi-list-check"></i><span class="text">Task History</span></a>
        <hr />


        <a href="#"><i class="bi bi-gear"></i><span class="text">Policies</span></a>
        <a href="#"><i class="bi bi-list-task"></i><span class="text">Analytics</span></a>

        <!-- Push user section to bottom -->
        <div style="flex-grow: 1;"></div>


        <footer>
            <hr class="footer-divider" />
            <a href="#" class="bottom-user text-truncate" title="john@gmail.com">
                <i class="fas fa-user-circle"></i>
                <span class="text ml-2">john@gmail.com</span>
            </a>
        </footer>

    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <div class="topbar" style="height:40px; margin-top:-20px !important; margin-right:-30px; gap-1">
            <h4 class="mb-0" style="font-family: ' Open Sans', 'Segoe UI' ; font-size:18px ;padding-left:10px;">Tickets</h4>
            <div class="top-icons">
                <i class="fas fa-cloud-arrow-down" style="font-size: 12px; width: 24px; " title="Download Agent"></i><span class="text-dark small" style="font-family: ' Open Sans', 'Segoe UI' ; font-size:12px;"> Download Agent</span>
                <i class="bi bi-chevron-down small" style="font-size: 12px; width: 24px;" title="Training"></i>
                <span class="text-dark small" style="font-family: 'Open Sans', 'Segoe UI'; font-size: 12px;">Training</span>
                <i class="bi bi-bell-fill" title="User Account"></i>
                <i class="fas fa-cog" title="Settings"></i>

            </div>
        </div>

        <div class="mt-4">
            @RenderBody()
        </div>


    </div>










    <!-- jQuery (must be before DevExtreme) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Validation Plugin -->
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>

    <!-- DevExtreme JS -->
    <script src="https://cdn3.devexpress.com/jslib/23.2.4/js/dx.all.js"></script>

    <!-- Bootstrap JS (optional if you're using modals) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $('#menu-toggle').click(function () {
            $('#sidebar').toggleClass('collapsed');
            $('#mainContent').toggleClass('collapsed');
            if ($('#sidebar').hasClass("collapsed"))
                $('#imgLogo').addClass('d-none');
            else
                $('#imgLogo').removeClass('d-none');

        });



    </script>



    <script>
        function clearSelection() {
            const grid = $("#ticketGrid").dxDataGrid("instance");
            grid.clearSelection();

            document.getElementById("selectionBadge").classList.add("d-none");
        }

    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dropdownToggle = document.querySelector('.dropdown-toggle');
            const dropdownMenu = document.querySelector('.dropdown-menu');

            dropdownToggle.addEventListener('click', function () {
                // Delay execution to wait for the dropdown to render
                setTimeout(() => {
                    dropdownMenu.style.transform = 'translate(145px,35px)';
                }, 10);
            });
        });
    </script>



    @Scripts.Render("~/bundles/bootstrap")

    <!-- Render page-level scripts -->
    @RenderSection("scripts", required: false)

    <input type="hidden" id="modalContext" value="new" />

    <input type="hidden" id="assignToTicketIndex" />
    <input type="hidden" id="currentAssignedToName" />
    <input type="hidden" id="assignID" />
    <input type="hidden" id="assignTicketID" />

    <input type="hidden" id="assignOwnerID" />
    <input type="hidden" id="assignOwnerTicketID" />
    <input type="hidden" id="currentOwnerName" />




</body>
</html>
