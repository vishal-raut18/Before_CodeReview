@model MyMvcApp.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Faronics Deploy - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/faronics-login.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
   
</head>
<body>
    <div class="topbar">
        <img src="~/Content/FDeployIcon.png" alt="Logo" height="28" style="margin-right: 10px;" />
        
    </div>

    <div class="container">
        <div class="left">
            <video autoplay muted loop playsinline>
                <source src="~/Content/faronicsdeploy.mp4" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        </div>

        <div class="right">
            <h2>A whole new way to manage software.</h2>
            <p>Install, Update and Control within seconds.</p>

            <div class="radio-group">
                <label><input type="radio" name="authType" checked /> Email and Password</label>
                <label><input type="radio" name="authType" /> AD Credentials</label>
                <label><input type="radio" name="authType" /> SAML</label>
            </div>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Email Address" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                </div>

                <div class="forgot">
                    <a href="#">Forgot Password?</a>
                </div>

                <div class="terms">
                    By signing in, I agree to the <a href="#">Terms of Service</a>
                </div>

                <button type="submit" class="btn-login">SIGN IN</button>

                <div class="validation-summary-errors">
                    @Html.ValidationSummary(true)
                </div>
            }
        </div>
    </div>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/login-validation.js"></script>
</body>
</html>
