                                    <div id="tagsList"></div>
                                </div>
                            </div>



                            <div class="position-relative">
                                <button id="policyBtn" type="button" class="btn filter-button d-flex justify-content-between align-items-center px-2 py-1 w-100">
                                    <span id="selectedPolicy">Policy</span>
                                    <i class="bi bi-caret-down-fill text-muted ms-2" style="font-size: 12px;"></i>
                                </button>
                                <div id="policyDropdown" class="dropdown-menu p-2 shadow-sm">
                                    <div class="mt-1 px-2"><span>Policy</span><hr></div>
                                    <div class="input-group input-group-sm mb-2 focus-wrapper">
                                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                                        <input type="text" id="policySearch" class="form-control search-box" placeholder="Search">
                                        <button type="button" class="btn border-start-0" id="clearPolicySearch"><i class="bi bi-x"></i></button>
                                    </div>
                                    <div id="policyList"></div>
                                </div>
                            </div>
                        </div>
                    </div>

