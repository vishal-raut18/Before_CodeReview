<script>

    $(document).ready(function () {

        // Track how the modal was closed
        let shouldResetNewTicketForm = false;

        // 🟩 Mark reset true when user clicks close button
        $('#newTicketModal .btn-close, #newTicketModal .modal-footer .btn-secondary').on('click', function () {
            shouldResetNewTicketForm = true;
        });

        // 🟥 Mark reset false when opening a sub modal (not user closing)
        $('#assignOwnerModal, #assignToModal').on('show.bs.modal', function () {
            shouldResetNewTicketForm = false;
        });

        // ✅ On New Ticket modal hidden: Reset only if flagged
        document.getElementById('newTicketModal').addEventListener('hidden.bs.modal', function () {
            if (shouldResetNewTicketForm) {
                $('#newTicketForm')[0].reset();
                $('#newTicketForm').validate().resetForm();
                $('.form-control').removeClass('is-valid is-invalid');
            }
            // Always reset the flag
            shouldResetNewTicketForm = false;
        });

        // ✅ When sub modal closes, re-show New Ticket modal if in "new" context
        $('#assignOwnerModal, #assignToModal').on('hidden.bs.modal', function () {
            if ($("#modalContext").val() === "new") {
                const parentModal = bootstrap.Modal.getOrCreateInstance(document.getElementById("newTicketModal"));
                parentModal.show();
            }
        });

        // Fix modal stacking issue
        $('#assignOwnerModal, #assignToModal').on('shown.bs.modal', function () {
            $('body').addClass('modal-open');
        });
    });

</script>




